generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Barbershop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String
  phone       String
  services    BarbershopService[]
}

model BarbershopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  imageurl     String
  priceIncents Int
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  /**
   * essa tabela tem uma relação com a tabela barbershop
   * e a relação é um para muitos
   */
  // o parbershopid referencia o id da tabela Barbershop, essa é uma relação one to many
}
